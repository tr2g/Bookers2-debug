<h2>Search Results index</h2>

<table class="table table-hover table-inverse">
  <% if @range == "User" %> <!--検索するモデルがUserのとき-->
    <tbody>
      <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
      </tr>
      <% end %>
    </tbody>
  <% else %> <!--検索するモデルがUserじゃない(= 検索するモデルがBook)のとき-->
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td> <%= book.title %> </td>
      <td> <%= book.body %> </td>
    </tr>
    <% end %>
  </tbody>
  <% end %>
</table>