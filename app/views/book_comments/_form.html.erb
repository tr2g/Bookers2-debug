<% book.book_comments.each do |book_comment| %>
  <div class="m-2">
    <%= image_tag book_comment.user.get_profile_image, size:"100x100" %>
    <%= book_comment.user.name %>
    <%= book_comment.created_at.strftime('%Y/%m/%d') %><%= book_comment.comment %>
  <% if book_comment.user == current_user %>
  <%= link_to "Delete", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, class: "btn btn-sm btn-danger" %>
  <% end %>
  </div>
<% end %>

<div>
<%= form_with model: [book, book_comment], local: false do |f| %>
  <%= f.text_area :comment, rows: '5', placeholder: "Comment Text" %>
  <%= f.submit "Create Comment", class: "btn btn-sm btn-success" %>
<% end %>
</div>